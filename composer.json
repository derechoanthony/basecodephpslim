{
    "name": "Alliance Slim BaseCode",
    "description": "PHP micro framework that helps you quickly write simple yet powerful web applications and APIs.",
    "authors": [{
        "name": "Anthony Derecho",
        "email": "aderecho@asi-dev4.com"
    }],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "monolog/monolog": "^1.17",
        "illuminate/database": "^5.7",
        "vlucas/phpdotenv": "^2.5",
        "robmorgan/phinx": "^0.10.6",
        "respect/validation": "^1.1",
        "slim/csrf": "^0.8.3",
        "tuupola/slim-jwt-auth": "^3.1",
        "illuminate/pagination": "^5.7",
        "phpmailer/phpmailer": "^6.0",
        "aws/aws-sdk-php": "^3.71",
        "guzzlehttp/guzzle": "^6.3",
        "sendgrid/sendgrid": "^7.2",
        "fzaninotto/faker": "^1.8"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 0
    },
    "scripts": {
        "start": "php -S 127.0.0.1:3000 -t public",
        "test": "phpunit"
    }

}
